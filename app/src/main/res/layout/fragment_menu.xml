<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_vaccine"
            android:layout_width="@dimen/button_menu_size"
            android:layout_height="@dimen/button_menu_size"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/button_color"
            android:foregroundGravity="fill_horizontal"
            android:foregroundTint="#050505"
            android:src="@drawable/ic_launcher_foreground"
            android:textColor="@color/black"
            android:tint="#0B0909"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_anamnase"
            android:layout_width="@dimen/button_menu_size"
            android:layout_height="@dimen/button_menu_size"
            android:layout_marginEnd="24dp"
            android:background="@drawable/background_menu_button"
            android:src="@drawable/ic_launcher_foreground"
            android:text="Anamnase"
            android:textColor="@color/black"
            android:tint="@color/button_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/button_vaccine"
            app:layout_constraintEnd_toStartOf="@+id/button_vaccine"
            app:layout_constraintTop_toTopOf="@+id/button_vaccine" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anamnese"
            android:textColor="@color/button_text_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/button_anamnase"
            app:layout_constraintStart_toStartOf="@+id/button_anamnase"
            app:layout_constraintTop_toBottomOf="@+id/button_anamnase" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_medicine"
            android:layout_width="@dimen/button_menu_size"
            android:layout_height="@dimen/button_menu_size"
            android:layout_marginStart="24dp"
            android:backgroundTint="@color/button_color"
            android:src="@drawable/ic_launcher_foreground"
            android:text="Medicamentos"
            android:textColor="@color/black"
            android:tint="@color/black"
            app:cornerRadius="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_vaccine"
            app:layout_constraintStart_toEndOf="@+id/button_vaccine"
            app:layout_constraintTop_toTopOf="@+id/button_vaccine" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_prescription"
            android:layout_width="@dimen/button_menu_size"
            android:layout_height="@dimen/button_menu_size"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/button_color"
            android:text="Prescrição nutricional"
            android:textColor="@color/black"
            app:cornerRadius="21dp"
            app:layout_constraintEnd_toEndOf="@+id/button_anamnase"
            app:layout_constraintStart_toStartOf="@+id/button_anamnase"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_news"
            android:layout_width="@dimen/button_menu_size"
            android:layout_height="@dimen/button_menu_size"
            android:backgroundTint="@color/button_color"
            android:text="Notícias"
            android:textColor="@color/black"
            app:cornerRadius="21dp"
            app:layout_constraintEnd_toEndOf="@+id/button_vaccine"
            app:layout_constraintStart_toStartOf="@+id/button_vaccine"
            app:layout_constraintTop_toTopOf="@+id/button_prescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"

            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/single_doggo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/single_doggo" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white"
                    android:text="Meu pets"
                    android:textColor="@color/black"
                    app:cornerRadius="21dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
